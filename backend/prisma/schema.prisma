generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  state     String    // default preferred state (required)
  language  String    // default preferred language (required)
  createdAt DateTime @default(now())
  
  queries   Query[]   // user query history
}

model Query {
  id         Int      @id @default(autoincrement())
  userId     Int
  queryText  String
  state      String?   // optional override (defaults to User.state)
  language   String?   // optional override (defaults to User.language)
  status     String
  confidence Float?
  aiResponse String?
  timestamp  DateTime @default(now())

  User       User     @relation(fields: [userId], references: [id])
}
